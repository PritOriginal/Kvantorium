<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="8dp"
    android:paddingBottom="8dp">

    <EditText
        android:id="@+id/edit_number_change_component"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textNoSuggestions|number"
        app:layout_constraintStart_toEndOf="@+id/number_change_component"
        app:layout_constraintTop_toBottomOf="@+id/name_change_component" />

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_change_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            app:srcCompat="@drawable/joystick_overview" />
    </LinearLayout>

    <TextView
        android:id="@+id/number_change_component"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/l"
        app:layout_constraintTop_toBottomOf="@+id/name_change_component" />

    <TextView
        android:id="@+id/name_change_component"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="18dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/l"
        app:layout_constraintTop_toTopOf="parent" />

    <requestFocus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>